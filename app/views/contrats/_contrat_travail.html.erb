<%= form_with model: @contrat do |form| %>

<div class="field">
    <%= form.label :date_debut, class: "block text-sm font-medium text-gray-700" %>
    <%= form.date_field :date_debut, class: "select" %>
</div>

<div class="field">
    <%= form.label :date_fin, class: "block text-sm font-medium text-gray-700" %>
    <%= form.date_field :date_fin, class: "select" %>
</div>



<div class=" mt-2 mb-2 field">
    <%= form.label :agent_id, 'Agent', class: "block text-sm font-medium text-gray-700" %>
    <%= form.collection_select :agent_id, Agent.all, :id, :name, class: "px-4 py-2 border rounded-lg shadow-sm focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
</div>
<div>
    <%= form.label :agent_status, 'status', class: "block text-sm font-medium text-gray-700" %>
    <%= form.collection_select :agent_satus, Agent.all, :id, :status, class: "px-4 py-2 border rounded-lg shadow-sm focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
</div>

<div>
    <%= form.submit "enregister", class: " mt-4 w-full bg-indigo-600 text-white py-2 px-4 rounded-md shadow-sm hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500"%>
</div>
<% end %>