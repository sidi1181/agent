<div class="container mx-auto p-4">
  <%= form_with url: contrats_path, method: :get, local: true, class: "space-y-4" do |form| %>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
      <div>  
        <%= form.text_field :query, value: params[:query], placeholder: "Rechercher par nom de l' agent", class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
      </div>

      <div>
        <%= form.date_field :date_debut, value: params[:date_debut], class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
      </div>
    </div>

    <div>
      <%= form.submit "Rechercher", class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
    </div>
  <% end %>
  <div class="flex justify-end absolute bottom-0 right-0 p-1">
    <%= link_to 'Déconnexion', destroy_user_session_path, class: 'bg-indigo-600 text-white py-1 px-2 rounded-md shadow-sm hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 gap-2 whitespace-nowrap inline-flex items-center text-sm', data: { turbo_method: :delete, turbo_confirm: "Etes-vous sûre de vouloir vous déconnecter?" } %>
  </div>
  <div class="flex justify-between items-center">
    <h1 class="text-2xl font-bold">Contrat</h1>
    <%= link_to 'Nouvel Contrat', new_contrat_path, class: 'bg-red-600 text-white py-1 px-2 rounded' %>
  </div>
  <table class="min-w-full bg-white border border-gray-200 mt-4">
    <thead class="bg-indigo-600 text-white ">
      <tr>
        <th class="text-left table-col">ID</th>
        <th class="text-left table-col">Name</th>
        <th class="text-left py-2 px-6 border-b">Durée du contrat</th>
        <th class="text-left table-col">Status</th>
        <th class="text-left table-col">Action</th>
      </tr>
    </thead>
    <tbody>
      <% @contrats.each do |contrat| %>
        <tr>
          <td class="table-col"><%= contrat.id %></td>
          <td class="table-col"><%= contrat.agent.name %></td>
          <td class="py-2 px-6 font-bold border-b"><%= contrat.decorate.operation_date %></td>
          <td class="table-col"><%= contrat.agent.status %></td>
          <td class="table-col">
            <%= link_to 'Modifier', edit_contrat_path(contrat), class: 'bg-red-600 text-white py-1 px-2 rounded mr-1' %>
            <%= link_to 'Voir', contrat_path(contrat), class: 'bg-blue-600 text-white py-1 px-2 rounded mr-1' %>
            <%= link_to 'Supprimer', contrat, data: {  turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: 'bg-red-700 text-white py-1 px-2 rounded' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
