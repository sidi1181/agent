<div class="flex w-full top-0 relative items-center justify-center min-h-screen bg-gray-200">
    <div class="max-w-md w-full space-y-8 bg-white p-8 rounded-lg shadow-lg">
        <h1 class="text-2xl font-bold mb-6">New Personal</h1>
        <%= form_with url: import_agents_path, method: :post, local: true, html: { multipart: true }, class: "space-y-4" do |form| %>
            <div>
                <%= form.file_field :file, class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
            </div>
            <div>
                <%= form.submit "Importer", class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500" %>
            </div>
        <% end %>
    </div>    
</div>