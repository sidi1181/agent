<%= form_with model: @agent do |form| %>
  <div class="field">
    <%= form.label :name, class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_field :name, autofocus: true, autocomplete: "name", required: true, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
  </div>

  <div class="field">
    <%= form.label :email, class: "block text-sm font-medium text-gray-700" %>
    <%= form.email_field :email, autocomplete: "email", required: true, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
  </div>

  <div class="field">
    <%= form.label :code, class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_field :code, autocomplete: "code", required: true, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
  </div>

  <div class="field">
    <%= form.label :birthday, class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_field :birthday, autocomplete: "birthday", required: true, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
  </div>

  <div class="field">
    <%= form.label :status, class: "block text-sm font-medium text-gray-700" %>
    <%= form.select :status, options_for_select(['Président', 'Vice-Président', 'Membre', 'Admin', 'S.G'], @agent.status), { prompt: 'Select a status', required: true, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" } %>
  </div>
  

  <div>
    <%= form.label :direction_id, 'Direction', class: "block text-sm font-medium text-gray-700" %>
    <%= form.collection_select :direction_id, @directions, :id, :name, { prompt: 'Select a Direction' }, { class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" } %>
  </div>

  <div>
    <%= form.submit "Enregistrer", class: "mt-4 w-full bg-indigo-600 text-white py-2 px-4 rounded-md shadow-sm hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
  </div>
<% end %>
